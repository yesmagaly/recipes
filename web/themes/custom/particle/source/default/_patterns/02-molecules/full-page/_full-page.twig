{#
/**
 * @file
 * full-page
 *
 * Available variables for full-page:
 *  - full_page.variable_name [variable_type]: Description of the variable. Example below.
 *  - full_page.invert [bool]: When set, colors will be inverted for light display on dark background.
 *  - attributes
 *  - title_prefix
 *  - title_suffix
 *  - metadata
 */
#}
{% if attributes %}
<div{{ attributes.addClass('full-page') }}>
{% else %}
<div class="full-page">
{% endif %}

  {{ title_prefix }}
  <div class="full-page__content">
    {% block tag %}
      {% include '@atoms/_tag.twig' with { tag__label: full_page__tag } %}
    {% endblock %}
    {% block title %}
      {% include '@atoms/_block-title.twig' with { block_title__label: full_page__title } %}
    {% endblock %}
    {% block date %}
      {% include '@atoms/_date.twig' with { date__label: full_page__date,  date__comments: full_page__comments } %}
    {% endblock %}
  </div>
  <div>
    <div class="full-page__image">
      {% block carousel_content %}
        <img src="{{ full_page__image.src }}" alt="{{ full_page__image.alt }}">
      {% endblock %}
    </div>
    <div class="full-page__body">
      {{ full_page__body }}
    </div>
    <div class="full-page__highlighted">
      {% block text %}
        {% include '@atoms/_highlighted-text.twig' with { highlighted_text__summary: full_page__highlighted } %}
      {% endblock %}
    </div>
  </div>
  {{ title_suffix }}
</div>
